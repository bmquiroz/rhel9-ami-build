      "ami_description": "RedHat Virtual Machine - Linux - Release v{{user `ami_version_major`}}_{{user `ami_release`}}",
      "source_ami_filter": {
        "owners": [
          "amazon"
        ],
        "filters": {
          "virtualization-type": "hvm",
          "name": "RHEL-9.*_HVM-20*",
          "architecture": "x86_64",
